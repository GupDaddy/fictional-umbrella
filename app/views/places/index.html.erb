<%= will_paginate @places %>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <!-- img class="d-block img-fluid" src="..." alt="First slide" -->
      <%= image_tag 'slider1.jpg', class: 'd-block img-fluid' %>
      <div class="carousel-caption d-none d-md-block">
      	<h3>Find the best fine dining places</h3>
      </div>
    </div>
    <div class="carousel-item">
      <!--img class="d-block img-fluid" src="..." alt="Second slide"-->
      <%= image_tag 'slider2.jpg', class: 'd-block img-fluid' %>
      <div class="carousel-caption d-none d-md-block">
      	<h3>Eat in luxury</h3>
      </div>
    </div>
    <div class="carousel-item">
      <!--img class="d-block img-fluid" src="..." alt="Third slide"-->
      <%= image_tag 'slider3.jpg', class: 'd-block img-fluid' %>
      <div class="carousel-caption d-none d-md-block">
      	<h3>Find off-the-beaten-path locales</h3>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<% @places.each	do |place| %>
	<div class="booyah-box col-10 offset-1">
		<h1><%= link_to place.name, place_path(place) %></h1>
		<i><%= place.address %></i><br />
		<p><%= place.description %>
			<% if place.user.present? %>
				- <small><%= place.user.email %></small>
			<% end %>
		</p>
		<div class="col-12">
			<% if place.photos.present? %>
				<% if place.photos.last.picture.url.present? %>
						<%= image_tag(place.photos.last.picture.url, width: "25%", height: "auto") %>
				<% end %>
				<!--blockquote>
					<%= place.photos.last.caption %>
				</blockquote -->		
			<% end %>
		</div>

		<% if place.comments.present? %>
			<div class="col-12">
				<blockquote>
					<% if place.comments.last.humanized_rating.present? %>
						<b><%= place.comments.last.humanized_rating %></b> - 
					<% end %>
					<%= place.comments.last.message %>
					<br />
					- <small><%= place.comments.last.user.email %></small>
				</blockquote>
			</div>
		<% end %>
	</div>
<% end %>